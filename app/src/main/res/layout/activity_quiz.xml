<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizActivity"
    android:background="@mipmap/fundo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_pontuacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_pontuacao"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pontuacao"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="76dp">



        <TextView
            android:id="@+id/pergunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="20sp"  />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/true_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verdadeiro" />


            <Button
                android:id="@+id/false_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Falso" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/prev_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="40dp"
                android:text="voltar"
                android:src="@mipmap/voltar" />
            

            <ImageButton
                android:id="@+id/next_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="avancar"
                android:src="@mipmap/avancar" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/botao_trapacear_1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/trapacear"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

